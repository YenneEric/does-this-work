<Page x:Class="View.AddGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:View"
      mc:Ignorable="d" 
      Title="AddGame" Height="310" Width="240">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Add Game" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="Game Date" />
            <DatePicker Name="GameDatePicker" Margin="0,5,0,20" />

            <TextBlock Text="Location" />
            <TextBox Name="LocationTextBox" Margin="0,5,0,20" />

            <TextBlock Text="Is Canceled?" />
            <CheckBox Name="CanceledCheckBox" Content="Check if canceled" Margin="0,5,0,20" />

            <Button Content="Add Game" Name="AddGameButton" Click="AddGameButton_Click" />
            <Button Content="Back" Name="BackButton" Click="BackToInsertData" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Page>
